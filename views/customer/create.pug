extends ../layout.pug

block content
  .container
    h1 Create New Customer
    form.form-horizontal(method="post", action="/customer/create", enctype="multipart/form-data")
      .form-group
        label.col-sm-2.control-label(for="email") Email
        .col-sm-10
          input.form-control(type="email", name="email", required)
      .form-group
        label.col-sm-2.control-label(for="password") Password
        .col-sm-10
          input.form-control(type="password", name="password" required)
      .form-group
        label.col-sm-2.control-label(for="fullname") Name
        .col-sm-10
          input.form-control(type="text", name="fullname" required)
      .form-group
        label.col-sm-2.control-label(for="phone") Phone
        .col-sm-10
          input.form-control(type="phone", name="phone" required)
      .form-group
        label.col-sm-2.control-label(for="image") Image
        .col-sm-10
          input.form-control(type="file", name="image", accept="image/*", onchange="previewImage(event)" required)
          img(id="preview", src="" , style="width: 500px; height: 300px;", alt="" )
      .form-group
        .col-sm-offset-2.col-sm-10
          input.btn.btn-primary(type="submit", value="Create")
 
